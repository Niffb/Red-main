{
  "name": "red-glass",
  "version": "1.0.0",
  "description": "Spotlight-like AI chatbot using DeepSeek",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "start:stt": "./start.sh",
    "start:with-transcription": "./start.sh",
    "dev": "electron .",
    "build": "NODE_ENV=production node build.js",
    "build:mac": "NODE_ENV=production node build.js mac",
    "build:win": "NODE_ENV=production node build.js win",
    "build:linux": "NODE_ENV=production node build.js linux",
    "build:all": "NODE_ENV=production node build.js all",
    "dist": "npm run build",
    "icons": "node build-icons.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "chatbot",
    "deepseek",
    "ai",
    "spotlight",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.redglass.app",
    "productName": "Red Glass",
    "directories": {
      "output": "dist"
    },
    "extends": null,
    "files": [
      "electron/**/*",
      "public/**/*",
      "!public/index-react-backup.html",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend/",
        "filter": [
          "**/*",
          "!venv/**/*",
          "!**/__pycache__/**/*",
          "!**/*.pyc"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "Red Glass",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@google/generative-ai": "^0.24.1",
    "bcrypt": "^5.1.1",
    "dompurify": "^3.0.6",
    "dotenv": "^16.4.4",
    "electron-store": "^7.0.3",
    "marked": "^9.1.6",
    "mongodb": "^6.20.0",
    "node-fetch": "^2.6.9",
    "node-record-lpcm16": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sharp": "^0.32.6",
    "speaker": "^0.5.4",
    "uuid": "^11.1.0",
    "wav": "^1.0.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-dynamic-import": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-dynamic-import": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "buffer": "^6.0.3",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^30.5.1",
    "electron-builder": "^24.9.1",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.3",
    "process": "^0.11.10",
    "style-loader": "^4.0.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.99.9",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "optionalDependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1"
  }
}
